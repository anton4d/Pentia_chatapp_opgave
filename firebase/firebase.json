{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "bash -c 'npm --prefix \"$RESOURCE_DIR\" run lint'",
      "bash -c 'npm --prefix \"$RESOURCE_DIR\" run build'"
      ]
    }
  ]
}
